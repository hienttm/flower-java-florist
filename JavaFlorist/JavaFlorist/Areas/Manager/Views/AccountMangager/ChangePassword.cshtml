@model UserViewModel
@{
    ViewData["Title"] = "Add Author";
}
<div id="page-wrapper">
    <div class="main-page">
        <h4>Add Category</h4>
        <div class="col-12">
            <div class="col-md-9">
                <form asp-action="ChangePassword" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label class="form-label my-1">Password</label>
                        <input asp-for="Password" class="form-control mb-2" placeholder="************">
                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-label my-1">Reapeat Password</label>
                        <input asp-for="ReapeatPassword" class="form-control mb-2" placeholder="************">
                        <span asp-validation-for="@Model.ReapeatPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-primary" onclick="addCategory()">Change Password</button>
                    </div>
                </form>
                <a asp-action="Index">Back to List Account</a>
            </div>
        </div>
    </div>
</div>