@model OrderDetailModel

<div id="page-wrapper">
    <div class="main-page">
        <h4>Add Product</h4>
        <div class="col-12">
            <div class="col-md-9">
                <form asp-action="ChangeStatus" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label>Change Order Status</label>
                        <select asp-for="OrderStatusId" class="form-control" asp-items="ViewBag.OrderStatus">
                            <option>--Choose a Order Status--</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-primary" onclick="addCategory()">Update</button>
                    </div>
                </form>
                <a asp-action="Index">Back to List Product</a>
            </div>
        </div>
    </div>
</div>

