@model IEnumerable<JavaFlorist.ViewModels.FeaturedViewModel>

<div class="row g-4">
    @foreach (var item in Model)
    {
        <div class="col-lg-6 col-xl-4">
            <div class="p-3 rounded bg-light">
                <div class="row align-items-center">
                    <div class="col-6">
                        <img src="~/img/@item.Image" class="img-fluid rounded-circle w-100" style="object-fit:cover" alt="">
                    </div>
                    <div class="col-6">
                        <a href="#" class="h5">@item.Name</a>
                        <div class="d-flex my-3">
                            @for (var star = 1; star <= 5; star++)
                            {
                                if (star <= @item.Rate)
                                {
                                    <i class="fa fa-star text-warning"></i>
                                }
                                else
                                {
                                    <i class="fa fa-star text-mute"></i>
                                }
                            }
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            @if (@item.Discount != @item.Price)
                            {
                                <p class="text-danger font-weight-normal fs-8 mb-0 text-decoration-line-through">$@item.Price</p>
                            }
                            <p class="text-dark fs-5 fw-bold mb-0">$@item.Discount</p>
                        </div>
                        <a asp-action="AddToCard" asp-controller="Cart" asp-route-Id="@item.Id" class="btn border border-secondary rounded-pill px-3 text-primary"><i class="fa fa-shopping-bag me-2 text-primary"></i> Add to cart</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>