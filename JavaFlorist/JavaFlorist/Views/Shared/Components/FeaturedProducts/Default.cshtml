@model IEnumerable<JavaFlorist.ViewModels.FeaturedViewModel>


    <div class="col-lg-12">
        <h4 class="mb-3">Featured products</h4>
        @foreach (var item in Model)
         {
            <div class="d-flex align-items-center justify-content-start">
                <div class="rounded me-4" style="width: 100px; height: 100px;">
                    <img src="~/img/@item.Image" class="img-fluid rounded" alt="">
                </div>
                <div>
                    <h6 class="mb-2">@item.Name</h6>
                    <div class="d-flex mb-2">
                        @for (var star = 1; star <= 5; star++)
                        {
                            if (star <= @item.Rate)
                            {
                                <i class="fa fa-star text-warning"></i>
                            }
                            else
                            {
                                <i class="fa fa-star text-mute"></i>
                            }
                        }
                    </div>
                    <div class="d-flex mb-2">
                        <h5 class="fw-bold me-2">@item.Discount $</h5>
                        <h5 class="text-danger text-decoration-line-through">@item.Price $</h5>
                    </div>
                </div>
            </div>
         }
        <div class="d-flex justify-content-center my-4">
            <a href="#" class="btn border border-secondary px-4 py-3 rounded-pill text-primary w-100">Vew More</a>
        </div>
    </div>