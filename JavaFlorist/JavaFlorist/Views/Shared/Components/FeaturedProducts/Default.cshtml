@model IEnumerable<JavaFlorist.ViewModels.FeaturedViewModel>


<div class="col-lg-12">
    <h4 class="mb-3">Featured products</h4>
    @foreach (var item in Model)
    {
        <div class="d-flex align-items-center justify-content-center">
            <div class="rounded me-4 mb-4" style="width: 40%;">
                <img style="width:100%;" src="~/img/@item.Image" class="img-fluid rounded" alt="">
            </div>
            <div style="width: 50%;">
                <h6 class="mb-2">@item.Name</h6>
                <div class="d-flex mb-2">
                    @for (var star = 1; star <= 5; star++)
                    {
                        if (star <= @item.Rate)
                        {
                            <i class="fa fa-star text-warning"></i>
                        }
                        else
                        {
                            <i class="fa fa-star text-mute"></i>
                        }
                    }
                </div>
                <div class="d-flex mb-2">
                    <p class="text-dark fw-bold me-2">@item.Discount $</p>
                    <p class="text-danger text-decoration-line-through">@item.Price $</p>
                </div>
            </div>
        </div>
    }
    <div class="d-flex justify-content-center my-4">
        <a asp-action="ViewMore" asp-controller="Product" class="btn border border-secondary rounded-pill px-4 py-2 mb-4 text-primary w-100">View More</a>
    </div>
</div>