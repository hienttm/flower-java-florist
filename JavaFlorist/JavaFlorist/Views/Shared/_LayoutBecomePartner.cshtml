<body>

    <!-- Spinner Start -->
    <div id="spinner" class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50  d-flex align-items-center justify-content-center">
        <div class="spinner-grow text-primary" role="status"></div>
    </div>
    <!-- Spinner End -->
    <!-- Navbar start -->
    <div class="container-fluid fixed-top" style="z-index:99">
        <div class=" topbar bg-primary d-none d-lg-block ">
            <div class="d-flex justify-content-between">
                <div class="top-info ps-2">
                    <small class="me-3"><i class="fas fa-map-marker-alt me-2 text-secondary"></i> <a href="#" class="text-white">Số 8, Tôn Thất Thuyết - Hà Nội</a></small>
                    <small class="me-3"><i class="fas fa-envelope me-2 text-secondary"></i><a href="#" class="text-white">Email@Example.com</a></small>
                </div>
            </div>
        </div>
        <div class="container px-0">
            <nav class="navbar navbar-light bg-white navbar-expand-xl">
                <a asp-action="Index" asp-controller="Home" class="navbar-brand"><h1 class="text-primary display-6"> Java Florist</h1></a>
                
                <div class="collapse navbar-collapse bg-white" id="navbarCollapse">
                    <div class="d-flex w-100 m-3 me-0 justify-content-between align-items-center">
                        <p class="fs-4">Register Become a Partner</p>
                        @if (User.Identity.IsAuthenticated && User.HasClaim(c => c.Type == "Avatar"))
                        {

                            <div class="position-relative account d-flex flex-column align-items-center" style="width: 120px; height: 60px; display: flex; flex-direction: column; justify-content: space-around;">
                                <img style="width:32%; object-fit:cover; overflow:hidden; border-radius:20px" src="~/img/customer/@User.FindFirst("Avatar")?.Value" />
                                <a class="my-auto">
                                    <span>@User.Identity.Name</span>
                                </a>
                                <div class="form-user account-seting position-absolute top-100 start-0 " style="width: 100%;">
                                    <div class="bg-light text-center py-2 shadow-sm p-3 mb-5 bg-white rounded">
                                        <p class="m-0 p-2"><a asp-action="Index" asp-controller="Profile">Thông tin</a></p>
                                        <p class="m-0 p-2"><a asp-action="Logout" asp-controller="User">Đăng xuất</a></p>
                                    </div>
                                </div>
                            </div>

                        }
                        else
                        {
                            <a asp-action="Login" asp-controller="User" class="my-auto">

                                <i class="fas fa-user fa-2x item-color"></i>
                            </a>
                        }
                    </div>
                </div>
            </nav>
        </div>
    </div>
    <!-- Navbar End -->
    <!-- Modal Search Start -->
    <div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-fullscreen">
            <div class="modal-content rounded-0">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Search by keyword</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-flex align-items-center">
                    <div class="input-group w-75 mx-auto d-flex">
                        @await Html.PartialAsync("_SearchPartial")
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal Search End -->
    <!-- Hero Start -->
    @RenderBody()
    <!-- Footer Start -->
    <div class="container-fluid bg-dark text-white-50 footer pt-5 mt-5 ">
        <div class="container">
            <div class="row g-5">
                <div class="col-lg-3 col-md-6">
                    <div class="footer-item">
                        <h4 class="text-light mb-3">Why People Like us!</h4>
                        <p class="mb-4">
                            typesetting, remaining essentially unchanged. It was
                            popularised in the 1960s with the like Aldus PageMaker including of Lorem Ipsum.
                        </p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="d-flex flex-column text-start footer-item">
                        <h4 class="text-light mb-3">Shop Info</h4>
                        <a class="btn-link" href="">About Us</a>
                        <a class="btn-link" href="">Contact Us</a>
                        <a class="btn-link" href="">Privacy Policy</a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="d-flex flex-column text-start footer-item">
                        <h4 class="text-light mb-3">Account</h4>
                        <a class="btn-link" href="">My Account</a>
                        <a class="btn-link" href="">Shop details</a>
                        <a class="btn-link" href="">Shopping Cart</a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="footer-item">
                        <h4 class="text-light mb-3">Contact</h4>
                        <p>Address: Số 8 Tôn Thất Thuyết, Hà Nội</p>
                        <p>Email: Example@gmail.com</p>
                        <p>Phone: +0123 4567 8910</p>
                        <img src="img/payment12.jpg" class="img-fluid" alt="" style="height: 30px">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->
    <!-- Copyright Start -->
    <div class="container-fluid copyright bg-dark py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    <span class="text-light"><a href="#"><i class="fas fa-copyright text-light me-2"></i>Your Site Name</a>, All right reserved.</span>
                </div>
                <div class="col-md-6 my-auto text-center text-md-end text-white">
                    <!--/*** This template is free as long as you keep the below author’s credit link/attribution link/backlink. ***/-->
                    <!--/*** If you'd like to use the template without the below author’s credit link/attribution link/backlink, ***/-->
